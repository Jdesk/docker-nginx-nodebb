server {
   listen 80 default_server;

   location / {
     proxy_pass https://registry.npmjs.org/;
     proxy_cache npm;
     proxy_cache_valid 200 302 3d;
     proxy_cache_valid 404 1m;
     sub_filter 'registry.npmjs.org' $http_host;
     sub_filter_once off;
     sub_filter_types application/json;
   }
 }
